{
    "manifest_version": 2,

    "name": "Windows Timeline for Chrome",
    "description": "Sync your chrome history across devices using Windows Timeline.",
    "version": "1.0.0",
    "author": "Dominic Maas",

    "browser_action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["libs/graph-js-sdk-web.js", "timeline.js"],
        "run_at": "document_end"
    }],

    "permissions": [
        "identity",
        "storage",
        "https://graph.microsoft.com/v1.0/me/activities/*",
        "https://login.microsoftonline.com/common/oauth2/v2.0/token"
    ]
}